<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.RisultatiRistorantiController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: rgb(47,98,84);">

    <!-- Pulsante INDIETRO -->
    <top>
        <VBox>
            <HBox alignment="TOP_LEFT">
                <padding>
                    <Insets top="15" left="15" bottom="10" right="15"/>
                </padding>

                <Button text="â† Indietro" onAction="#onBackClicked"
                        style="-fx-background-color: #d32f2f; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 14px;
                               -fx-background-radius: 8; -fx-padding: 6 18;
                               -fx-border-color: #b71c1c; -fx-border-width: 2;
                               -fx-border-radius: 8;"/>
            </HBox>

        </VBox>
    </top>

    <!-- Contenuto centrale -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="20" left="20" bottom="20" right="20"/>
            </padding>

            <Label text="Risultati ricerca"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <ScrollPane fitToWidth="true" prefViewportHeight="450"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
                <content>
                    <FlowPane fx:id="listaRisultati"
                              hgap="20" vgap="20"
                              prefWrapLength="820"
                              alignment="TOP_LEFT"/>
                </content>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
