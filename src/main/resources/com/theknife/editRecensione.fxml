<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.EditRecensioneController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: rgb(47,98,84);">

    <top>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="15" left="15" bottom="15" right="15"/>
            </padding>
            <Button text="← Indietro" onAction="#onBackClicked"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 14px;
                           -fx-background-radius: 8; -fx-padding: 6 18;
                           -fx-border-color: #b71c1c; -fx-border-width: 2;
                           -fx-border-radius: 8;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="16">
            <padding>
                <Insets top="25" left="25" right="25" bottom="25"/>
            </padding>

            <Label fx:id="lblTitolo"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <VBox spacing="10"
                  style="-fx-background-color: white; -fx-background-radius: 14;
                         -fx-border-radius: 14; -fx-border-color: rgb(47,98,84); -fx-border-width: 3;">
                <padding>
                    <Insets top="18" left="18" right="18" bottom="18"/>
                </padding>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="⭐ Stelle (1-5):" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Spinner fx:id="spStelle" prefWidth="90"/>
                </HBox>

                <Label text="Testo recensione:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <TextArea fx:id="txtTesto"
                          prefRowCount="8"
                          wrapText="true"
                          style="-fx-font-size: 14px;"/>
            </VBox>

            <Button text="Salva modifiche" onAction="#onSaveClicked"
                    style="-fx-background-color: white; -fx-text-fill: rgb(47,98,84);
                           -fx-font-weight: bold; -fx-font-size: 14px;
                           -fx-background-radius: 10; -fx-padding: 10 18;
                           -fx-border-color: rgb(47,98,84); -fx-border-width: 3; -fx-border-radius: 10;"/>

            <Label fx:id="lblStatus" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </center>

</BorderPane>
