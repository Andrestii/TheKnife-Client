<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.MyRecensioniController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: rgb(47,98,84);">

    <top>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="15" left="15" bottom="15" right="15"/>
            </padding>
            <Button text="â† Indietro" onAction="#onBackClicked"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 14px;
                           -fx-background-radius: 8; -fx-padding: 6 18;
                           -fx-border-color: #b71c1c; -fx-border-width: 2;
                           -fx-border-radius: 8;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="16">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>

            <Label fx:id="lblTitolo"
                   text="Le mie recensioni"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <ScrollPane fitToWidth="true"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
                <content>
                    <VBox fx:id="boxRecensioni" spacing="14" prefWidth="820"/>
                </content>
            </ScrollPane>

            <Label fx:id="lblStatus"
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </center>

</BorderPane>
