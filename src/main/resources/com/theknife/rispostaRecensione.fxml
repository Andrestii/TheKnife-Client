<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.RispostaRecensioneController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: rgb(47,98,84);">

    <top>
        <HBox alignment="TOP_LEFT" spacing="10">
            <padding>
                <Insets top="15" left="15" bottom="15" right="15"/>
            </padding>
            <Button text="â† Indietro" onAction="#onBackClicked"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 14px;
                           -fx-background-radius: 8; -fx-padding: 6 18;
                           -fx-border-color: #b71c1c; -fx-border-width: 2;
                           -fx-border-radius: 8;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="14">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>

            <Label fx:id="lblTitolo"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <VBox spacing="8" prefWidth="820"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 14;">
                <Label fx:id="lblStelle"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: rgb(47,98,84);"/>
                <Label fx:id="lblRecensione"
                       wrapText="true"
                       style="-fx-font-size: 14px; -fx-text-fill: #222;"/>
            </VBox>

            <VBox spacing="8" prefWidth="820">
                <Label text="Risposta del ristorante:"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <TextArea fx:id="txtRisposta" prefRowCount="6" wrapText="true"
                          style="-fx-background-radius: 10;"/>
            </VBox>

            <HBox spacing="10" alignment="CENTER" prefWidth="820">
                <Button text="Salva" onAction="#onSaveClicked"
                        style="-fx-background-color: white; -fx-text-fill: rgb(47,98,84);
                               -fx-font-weight: bold; -fx-font-size: 14px;
                               -fx-background-radius: 8; -fx-padding: 8 20;"/>

                <Button fx:id="btnDelete" text="Elimina risposta" onAction="#onDeleteClicked"
                        style="-fx-background-color: #d32f2f; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 14px;
                               -fx-background-radius: 8; -fx-padding: 8 20;"/>
            </HBox>

            <Label fx:id="lblStatus"
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </center>

</BorderPane>
