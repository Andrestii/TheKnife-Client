<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.theknife.LoginController"
      prefWidth="700" prefHeight="600"
      style="-fx-background-color: rgb(47,98,84);">

    <!-- Pulsante "Indietro" rosso -->
    <top>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <Button text="← Indietro" onAction="#onBackClicked"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 6 18; -fx-border-color: #b71c1c; -fx-border-width: 2; -fx-border-radius: 8;"/>
        </HBox>
    </top>

    <!-- Contenuto centrale: card bianca centrata come in registrazione -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="20" maxWidth="420" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">

                <!-- Logo -->
                <ImageView fx:id="logoImage" fitHeight="80" fitWidth="80">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <!-- Titolo -->
                <Label text="Accesso"
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: rgb(47,98,84);" />

                <!-- Testo "Come vuoi accedere?" -->
                <Label text="Come vuoi accedere?"
                       style="-fx-font-size: 16px; -fx-text-fill: #333;" />

                <!-- Radio buttons per ruolo -->
                <HBox spacing="15" alignment="CENTER">
                    <RadioButton fx:id="clienteRadio" text="Cliente" />
                    <RadioButton fx:id="ristoratoreRadio" text="Ristoratore" />
                </HBox>

                <!-- Form di accesso -->
                <GridPane hgap="10" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                        <ColumnConstraints halignment="LEFT" minWidth="250"/>
                    </columnConstraints>

                    <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>

        <!-- Bottone Invia -->
        <Button text="Invia" onAction="#onLoginClicked"
            style="-fx-background-color: rgb(47,98,84); -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8; -fx-padding: 8 20;"/>
            </VBox>
        </VBox>
    </center>

</BorderPane>
