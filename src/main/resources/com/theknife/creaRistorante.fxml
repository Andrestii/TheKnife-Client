<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.CreaRistoranteController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: rgb(47,98,84);">

    <!-- PULSANTE INDIETRO -->
    <top>
        <HBox alignment="TOP_LEFT">
            <padding><Insets top="15" left="15"/></padding>

            <Button text="← Indietro"
                    onAction="#onBackClicked"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-font-weight: bold;
                           -fx-background-radius: 8; -fx-padding: 8 20;
                           -fx-border-color: #b71c1c; -fx-border-width: 2; -fx-border-radius: 8;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15" maxWidth="700">

            <!-- CARD BIANCA CON TITOLO E CAMPI -->
            <VBox spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 18;
                         -fx-padding: 20;"
                  prefWidth="700" maxWidth="700">

                <!-- LOGO IN ALTO AL CENTRO -->
                <HBox alignment="CENTER">
                    <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                        <image>
                            <Image url="@logo.png"/>
                        </image>
                    </ImageView>
                </HBox>

                <!-- TITOLO IN ALTO AL CENTRO DELLA CARD -->
                <HBox alignment="CENTER">
                    <Label text="Inserisci i dati del tuo ristorante"
                           alignment="CENTER"
                           style="-fx-font-size: 24px; -fx-font-weight: bold;
                                  -fx-text-fill: rgb(47,98,84);" />
                </HBox>

                <VBox spacing="12" alignment="CENTER">

                    <!-- RIGA 1: Nome - Nazione - Città -->
                    <HBox spacing="25" alignment="TOP_CENTER">

                        <VBox spacing="6" prefWidth="200">
                            <Label text="Nome *"/>
                            <TextField fx:id="nomeField" prefWidth="200"/>
                            <Label fx:id="nomeError" textFill="red" style="-fx-font-size: 10px;"/>
                        </VBox>

                        <VBox spacing="6" prefWidth="200">
                            <Label text="Nazione *"/>
                            <TextField fx:id="nazioneField" prefWidth="200"/>
                            <Label fx:id="nazioneError" textFill="red" style="-fx-font-size: 10px;"/>
                        </VBox>

                        <VBox spacing="6" prefWidth="200">
                            <Label text="Città *"/>
                            <TextField fx:id="cittaField" prefWidth="200"/>
                            <Label fx:id="cittaError" textFill="red" style="-fx-font-size: 10px;"/>
                        </VBox>

                    </HBox>

                    <!-- RIGA 2: Indirizzo - Latitudine - Longitudine -->
                    <HBox spacing="25" alignment="TOP_CENTER">

                        <VBox spacing="6" prefWidth="200">
                            <Label text="Indirizzo *"/>
                            <TextField fx:id="indirizzoField" prefWidth="200"/>
                            <Label fx:id="indirizzoError" textFill="red" style="-fx-font-size: 10px;"/>
                        </VBox>

                        <VBox spacing="6" prefWidth="200">
                            <Label text="Latitudine *"/>
                            <TextField fx:id="latitudineField" prefWidth="200"/>
                            <Label fx:id="latitudineError" textFill="red" style="-fx-font-size: 10px;"/>
                        </VBox>

                        <VBox spacing="6" prefWidth="200">
                            <Label text="Longitudine *"/>
                            <TextField fx:id="longitudineField" prefWidth="200"/>
                            <Label fx:id="longitudineError" textFill="red" style="-fx-font-size: 10px;"/>
                        </VBox>
                    </HBox>

                    <!-- RIGA 3: Cucina (sx) - Prenotazioni+Delivery (centro) - Prezzo (dx) -->
                    <HBox spacing="25" alignment="TOP_CENTER">

                        <!-- SINISTRA: Tipologia di cucina -->
                        <VBox spacing="6" prefWidth="200">
                            <Label text="Tipologia di cucina *" style="-fx-font-weight: bold;"/>
                            <CheckBox fx:id="italianaCheck" text="Italiana"/>
                            <CheckBox fx:id="hamburgerCheck" text="Hamburger"/>
                            <CheckBox fx:id="asiaticaCheck" text="Asiatica"/>
                            <CheckBox fx:id="sudamericanaCheck" text="Sudamericana"/>
                            <Label fx:id="cucinaError" textFill="red" style="-fx-font-size: 10px;"/>
                        </VBox>

                        <!-- CENTRO: Prenotazioni sopra, Delivery sotto -->
                        <VBox spacing="12" prefWidth="200">

                            <!-- Prenotazioni -->
                            <VBox spacing="4">
                                <Label text="Prenotazioni *" style="-fx-font-weight: bold;"/>
                                <HBox spacing="15">
                                    <RadioButton fx:id="prenotazioneSi" text="Sì"/>
                                    <RadioButton fx:id="prenotazioneNo" text="No"/>
                                </HBox>
                            </VBox>
                            <Label fx:id="prenotazioneError" textFill="red" style="-fx-font-size: 10px;"/>

                            <!-- Delivery -->
                            <VBox spacing="4">
                                <Label text="Delivery *" style="-fx-font-weight: bold;"/>
                                <HBox spacing="15">
                                    <RadioButton fx:id="deliverySi" text="Sì"/>
                                    <RadioButton fx:id="deliveryNo" text="No"/>
                                </HBox>
                            </VBox>
                            <Label fx:id="deliveryError" textFill="red" style="-fx-font-size: 10px;"/>

                        </VBox>

                        <VBox spacing="12">
                            <!-- DESTRA: Prezzo -->
                            <VBox spacing="6" prefWidth="200">
                                <Label text="Prezzo *" style="-fx-font-weight: bold;"/>
                                <TextField fx:id="prezzoField" prefWidth="200" promptText="Es. 15"/>
                                <Label fx:id="prezzoError" textFill="red" style="-fx-font-size: 10px;"/>
                            </VBox>
                            
                            <!-- BOTTONE CREA in basso a destra -->
                            <VBox spacing="6" prefWidth="200">
                                <Button text="Crea"
                                onAction="#onCreaClicked"
                                style="-fx-background-color: rgb(47,98,84); -fx-text-fill: white;
                                    -fx-font-size: 16px; -fx-font-weight: bold;
                                    -fx-background-radius: 10;
                                    -fx-padding: 10 30;" />
                            </VBox>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
