<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.MenuRistoratoreController"
            prefWidth="800" prefHeight="600">

    <!-- Parte sinistra: area offuscata -->
    <Rectangle fx:id="overlayArea"
        fill="rgb(47,98,84)"
        opacity="0.7"
        onMouseClicked="#onOverlayClicked"
        AnchorPane.topAnchor="0.0"
        AnchorPane.bottomAnchor="0.0"
        AnchorPane.leftAnchor="0.0"
        AnchorPane.rightAnchor="320.0" />

    <!-- Parte destra: menu -->
    <VBox alignment="CENTER"
        spacing="20"
        prefWidth="320" prefHeight="600"
        style="-fx-background-color: white;"
        AnchorPane.topAnchor="0.0"
        AnchorPane.bottomAnchor="0.0"
        AnchorPane.rightAnchor="0.0">

        <!-- Icona utente -->
        <ImageView fitWidth="90" fitHeight="90">
            <image>
                <Image url="@chefIcon.png" />
            </image>
        </ImageView>

        <!-- Nome utente -->
        <Label fx:id="userNameLabel"
               text="Ristoratore"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: rgb(47,98,84);" />

        <!-- Pulsanti -->
        <VBox alignment="CENTER" spacing="15">
            <Button text="ðŸ  I miei ristoranti"
                prefWidth="200"
                onAction="#onMieiRistorantiClicked"
                style="-fx-background-color: rgb(47,98,84); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" />

            <Button text="âš™ Impostazioni"
                prefWidth="200"
                onAction="#onImpostazioniClicked"
                style="-fx-background-color: rgb(47,98,84); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" />

            <Button text="âŽ‹ Logout"
                prefWidth="200"
                onAction="#onLogoutClicked"
                style="-fx-background-color: #d9534f;
                       -fx-text-fill: white;
                       -fx-background-radius: 20;
                       -fx-font-size: 14px;
                       -fx-font-weight: bold;" />
        </VBox>
    </VBox>
</AnchorPane>
