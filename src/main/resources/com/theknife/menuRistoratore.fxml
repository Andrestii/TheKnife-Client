<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.MenuRistoratoreController"
            prefWidth="800" prefHeight="600"
            stylesheets="@style.css" styleClass="colored-background">

    <!-- SFONDO COLORATO a sinistra - Button trasparente che cattura i click -->
    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
           AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="320">

        <!-- Immagine sfondo -->
        <ImageView fitWidth="1200" fitHeight="1600" preserveRatio="true">
            <image>
                <Image url="@screenHome.png" />
            </image>
        </ImageView>

        <!-- Livello di oscuramento -->
        <Rectangle width="1200" height="1600"
                   fill="rgba(47,98,84,0.55)" />

        <!-- Bottone invisibile per catturare click -->
        <Button onAction="#onOverlayClicked"
                style="-fx-background-color: transparent; -fx-border-width: 0;"
                maxWidth="Infinity" maxHeight="Infinity" />

    </StackPane>

    <!-- MENU laterale a destra -->
    <VBox alignment="TOP_CENTER"
          spacing="20"
          prefWidth="320"
          style="-fx-background-color: white;"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <!-- Bottone X di chiusura -->
        <HBox alignment="TOP_RIGHT" prefHeight="40" prefWidth="320">
            <Region HBox.hgrow="ALWAYS" />
            <Button text="âœ•"
                    onAction="#onCloseMenuClicked"
                    style="-fx-font-size: 18px;
                           -fx-background-color: transparent;
                           -fx-text-fill: rgb(47,98,84);
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-padding: 6 12 0 0;" />
        </HBox>

        <!-- Icona ristoratore -->
        <ImageView fx:id="userLogo" fitWidth="90" fitHeight="90">
            <image>
                <Image url="@chefIcon.png" />
            </image>
        </ImageView>

        <!-- Nome utente -->
        <Label fx:id="userNameLabel"
               text="Ristoratore"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: rgb(47,98,84);" />

        <!-- Pulsanti -->
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10" left="0" right="0" bottom="0" />
            </padding>

            <Button text="ðŸ  I miei ristoranti"
                    prefWidth="200"
                    onAction="#onMieiRistorantiClicked"
                    style="-fx-background-color: rgb(47,98,84);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;" />

            <Button text="âš™ Impostazioni"
                    prefWidth="200"
                    onAction="#onImpostazioniClicked"
                    style="-fx-background-color: rgb(47,98,84);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;" />

            <Button text="â™¥ Preferiti"
                    prefWidth="200"
                    onAction="#onPreferitiClicked"
                    style="-fx-background-color: rgb(47,98,84);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;" />

            <Button text="â­ Recensioni"
                    prefWidth="200"
                    onAction="#onRecensioniClicked"
                    style="-fx-background-color: rgb(47,98,84);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;" />

            <Button text="âŽ‹ Logout"
                    prefWidth="200"
                    onAction="#onLogoutClicked"
                    style="-fx-background-color: #d9534f;
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;" />
        </VBox>
    </VBox>
</AnchorPane>
