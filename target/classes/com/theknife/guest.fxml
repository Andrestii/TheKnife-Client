<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.TextField?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.GuestController"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color: rgb(47,98,84);">

    <!-- Pulsante "Indietro" -->
    <top>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <Button text="← Indietro" onAction="#onBackClicked"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 6 18; -fx-border-color: #b71c1c; -fx-border-width: 2; -fx-border-radius: 8;"/>
        </HBox>
    </top>

    <!-- Contenuto principale -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="20" maxWidth="420" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">

                <!-- Logo -->
                <ImageView fx:id="logoImage" fitHeight="80" fitWidth="80">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <!-- Titolo -->
                <Label text="Guest"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: rgb(47,98,84);" />

                <!-- Testo -->
                <Label text="Inserisci la tua posizione"
                       style="-fx-font-size: 16px; -fx-text-fill: rgb(47,98,84);" />

                <!-- Campo testo -->
                <TextField fx:id="posizioneField" promptText="Es. Roma, Milano..."
                           maxWidth="250"
                           style="-fx-background-radius: 6; -fx-border-color: rgb(47,98,84); -fx-border-radius: 6; -fx-border-width: 1;" />

                <!-- Bottone -->
                <Button text="Invia" onAction="#onInviaClicked"
                        style="-fx-background-color: rgb(47,98,84); -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8; -fx-padding: 8 25;" />

            </VBox>
        </VBox>
    </center>

</BorderPane>
