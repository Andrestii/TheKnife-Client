<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.theknife.MenuClienteController"
            prefWidth="800" prefHeight="600"
            stylesheets="@style.css" styleClass="colored-background">

    <!-- SFONDO COLORATO a sinistra - Button trasparente che cattura i click -->
    <Button onAction="#onOverlayClicked"
            style="-fx-background-color: rgba(47,98,84,0.7); -fx-border-width: 0; -fx-padding: 0; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;"
            AnchorPane.topAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="320.0" />

    <!-- MENU laterale a destra -->
    <VBox alignment="TOP_CENTER"
          spacing="20"
          prefWidth="320"
          style="-fx-background-color: white;"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <!-- Bottone X di chiusura -->
        <HBox alignment="TOP_RIGHT" prefHeight="40" prefWidth="320">
            <Region HBox.hgrow="ALWAYS" />
            <Button text="✕"
                    onAction="#onCloseMenuClicked"
                    style="-fx-font-size: 18px;
                           -fx-background-color: transparent;
                           -fx-text-fill: rgb(47,98,84);
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-padding: 6 12 0 0;" />
        </HBox>

        <!-- Icona utente -->
        <ImageView fx:id="userLogo" fitWidth="90" fitHeight="90">
            <image>
                <Image url="@clientIcon.png" />
            </image>
        </ImageView>

        <!-- Nome utente -->
        <Label fx:id="userNameLabel"
               text="Nome Utente"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: rgb(47,98,84);" />

        <!-- Pulsanti -->
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10" left="0" right="0" bottom="0" />
            </padding>

            <Button text="⚙ Impostazioni"
                    prefWidth="200"
                    onAction="#onImpostazioniClicked"
                    style="-fx-background-color: rgb(47,98,84);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;" />

            <!-- Cuore corretto -->
            <Button text="♥ Preferiti"
                    prefWidth="200"
                    onAction="#onPreferitiClicked"
                    style="-fx-background-color: rgb(47,98,84);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;" />

            <Button text="⭐ Recensioni"
                    prefWidth="200"
                    onAction="#onRecensioniClicked"
                    style="-fx-background-color: rgb(47,98,84);
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;" />

            <Button text="⎋ Logout"
                    prefWidth="200"
                    onAction="#onLogoutClicked"
                    style="-fx-background-color: #d9534f;
                           -fx-text-fill: white;
                           -fx-background-radius: 20;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;" />
        </VBox>
    </VBox>

</AnchorPane>